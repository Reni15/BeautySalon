@model BeautySalon.Data.Reservation

@{
    ViewData["Title"] = "Edit";
}

<h1>Редекатарине</h1>

<h4>Резервации</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Users.FirstName" class="control-label">Потребител</label>
                <select asp-for="Users.FirstName" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Users.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Services.Name" class="control-label">Услуга</label>
                <select asp-for="Services.Name" class="form-control" asp-items="ViewBag.Services.FirstName"></select>
                <span asp-validation-for="Services.Name" class="text-danger"></span>
            </div>
        @*     <div class="form-group">
                <label asp-for="DateRegister" class="control-label">Дата на резервация</label>
                <input asp-for="DateRegister" class="form-control" />
                <span asp-validation-for="DateRegister" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Връщане назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
