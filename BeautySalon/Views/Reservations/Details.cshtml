@model BeautySalon.Data.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли</h1>

<div>
    <h4>Резервации</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Потребител</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.FirstName)
        </dd>
        <dt class="col-sm-2">
            <label>Услуга</label>

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Services.Name)
        </dd>
        <dt class="col-sm-2">

            <label>Дата на резервация</label>

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateRegister)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактиране</a> |
    <a asp-action="Index">Връщане назад</a>
</div>
